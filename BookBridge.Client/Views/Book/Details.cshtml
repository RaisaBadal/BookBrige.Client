@model BookBridge.Client.Models.BookDetailModel

@{
    ViewData["Title"] = "Details";
}

<h1>დეტალები</h1>

<div>
    <h4>წიგნის დეტალები</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            სათაური
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.title)
        </dd>
        <dt class = "col-sm-2">
           გამოქვეყნების თარიღი
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.publishedDate)
        </dd>
        <dt class = "col-sm-2">
            აღწერა
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.description)
        </dd>
         <dt>
             <img alt="foto" href=@Model.coverImageUrl height="100" width="100" />
         </dt>
        <dt class = "col-sm-2">
           ხელმისაწვდომი ეგზემპლარები
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.availableCopies)
        </dd>
        <div class="container">  
        <dt class="col-sm-2">
           კატეგორია
        </dt>
        @foreach (var item in Model.bookCategories)
        {
            <dd class="col-sm-10">
                @item.Name
            </dd>
            <dd class="col-sm-10">
                @item.Description
            </dd>
        }
        </div>
        <div class="container">
        <dt class="col-sm-2">
          ავტორი
        </dt>
        @foreach (var item in Model.authorDatas)
        {
            <dd class="col-sm-10">
                @item.Name
            </dd>
            <dd class="col-sm-10">
                @item.Surname
            </dd>
            <dd class="col-sm-10">
                @item.BirthDate
            </dd>
        }
        </div>
    </dl>
</div>
